<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Icon link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td>
			<div style="float:left;margin:0px 10px">
				<span style="font-weight: bold; 
							font-size: 12px; 
							color: white; 
							padding: 3px 12px; 
							background: <%= property.description == "" ? "black" : property.description %>; 
							border-radius: 6px;
							margin: 0px 2px;
							box-shadow: 0 4px 4px -4px rgba(0, 0, 0, 0.2);">
					<%= property.name %>
				</span>
			</div>
		</td>
        <td><%= property.description %></td>
        <td><%= property.icon_link %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Followups</h1>

<table>
  <thead>
    <tr>
      <th>Is guaranteed</th>
      <th>Hit status</th>
      <th>Explanation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followups.each do |followup| %>
      <tr>
        <td><%= followup.is_guaranteed %></td>
        <td><%= followup.hit_status %></td>
        <td><%= followup.explanation %></td>
        <td><%= link_to 'Show', followup %></td>
        <td><%= link_to 'Edit', edit_followup_path(followup) %></td>
        <td><%= link_to 'Destroy', followup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Followup', new_followup_path %>
